{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "allowJs": false,
        "composite": true,
        "baseUrl": ".",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "module": "ES2022",
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "target": "ES2022"
    }
}
